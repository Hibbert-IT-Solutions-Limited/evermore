{
  "name": "evermore",
  "version": "0.0.1",
  "description": "Permanently store your files on the blockchain",
  "main": "service.js",
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "service": "node dist/service.js",
    "dev": "npm-run-all build service",
    "build": "npm-run-all clean transpile",
    "transpile": "babel ./src --out-dir dist",
    "clean": "rimraf dist",
    "watch:dev": "nodemon"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "chokidar": "^3.4.0",
    "config": "^3.3.1",
    "dialog-node": "^0.2.1",
    "nexe": "^3.3.7",
    "nodemon": "^2.0.4",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "systray": "^1.0.5"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  }
}
